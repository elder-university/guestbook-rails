<%= form_for :post, url: posts_path do |f| %>

  <% if @post.errors.any? %>
    <p>Your entry has <%= pluralize(@post.errors.count, 'error') %>:</p>
    <ul>
      <% @post.errors.full_messages.each do |e| %>
        <li><%= e %></li>
      <% end %>
    </ul>
  <% end %>

  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %><br />
  </p>

  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %><br />
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
